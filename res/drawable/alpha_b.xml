<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/littlebule" android:state_pressed="false">

　　
        <!-- 定义当button 不处于pressed 状态时的形态。 -->



　　<shape>



　　            <stroke android:width="1dp" android:color="#00f" />


　　            <corners android:radius="1dp" />


　            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>


　　</shape>

　　</item>


        
　　    <item android:state_pressed="true">

　　
        <!-- 定义当button 处于pressed 状态时的形态。 -->



　　<shape>



            <solid android:color="#33000000" />

　　            <corners android:radius="1dp" />




　　</shape>

　　</item>


　　    <item android:state_focused="true">

　　
        <!-- 定义当button获得focus时的形态 -->



　　<shape>



　　            <stroke android:width="1dp" android:color="#333333" />


　　            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>


　　</shape>

　　</item>


　　
</selector>